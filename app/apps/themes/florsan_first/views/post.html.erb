<article id="post" >
    <header class="entry-header">
      <% if @post.has_thumb? %>
          <div class="entry-thumbnail">
              <%= raw @post.the_thumb %>
          </div>
      <% end %>
      <h1 class="entry-title"><%= @post.the_title %></h1>
      <div class="entry-meta">
        <span class="date">
          <h2><time datetime="" class="entry-date"><%= l(@post.published_at, format: :long) %></time></h2>
        </span>
        <span class="categories-links"><%= raw get_taxonomy(@post.the_categories.decorate, 'category tag') %></span>
        <span class="tags-links"><%= raw get_taxonomy(@post.the_tags.decorate, 'tag') %></span>
      </div>
    </header>
    <div class="entry-content">
        <%= raw @post.the_content %>
    </div>
</article>
<%= render partial: 'partials/comments', locals: {post: @post} %>
